<%= render "shared/sharethis" %>

<h1><%= @user.username %> <span>(<%= @user.points %> points<a href="#" class="help" title="The more problems you clean and report, the higher your score. The higher the score, the more badges you earn.">?</a>) <%= generate_badge current_user %> </span></h1>

<% if @user.cleaned_projects.length > 0 %>
    <h3>Problems <%= @user.username %> has cleaned</h3>

    <table border="0" cellspacing="0" cellpadding="0" width="100%" class="table table-striped table-bordered">
      <thead>
        <th>Problem Name</th>
        <th>Short Description</th>
        <th>Status<a href="#" class="help" title="New: Anyone can take ownership of these. Active: Currently being worked on. Complete: Work is done.">?</a></th>
        <th>Rating<a href="#" class="help" title="<%= meaning_of_rating 0 %>">?</a></th>
      <tbody>
        <%= render partial: 'projects/project', collection: @user.cleaned_projects %>
      </tbody>
    </table>
<% end %>


<% if @user.created_projects.length > 0 %>
  <h3>Problems reported by <%= @user.username %></h3>

  <table border="0" cellspacing="0" cellpadding="0" width="100%" class="table table-striped table-bordered">
    <thead>
      <th>Problem Name</th>
      <th>Short Description</th>
      <th>Status<a href="#" class="help" title="New: Anyone can take ownership of these. Active: Currently being worked on. Complete: Work is done.">?</a></th>
      <th>Rating<a href="#" class="help" title="<%= meaning_of_rating 0 %>">?</a></th>
    <tbody>
      <%= render partial: 'projects/project', collection: @user.created_projects %>
    </tbody>
  </table>
<% end %>

<% if allow? 'project', 'new' %>
  <p><i class="icon-plus-sign"></i><%= link_to 'Create a new problem', new_project_path %></p>
<% end %>
