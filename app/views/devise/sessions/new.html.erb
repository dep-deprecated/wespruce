<div class="row-fluid">
  <div class="span8">
    <h2>Sign in</h2>
    <p class="lead">Enter your login information below and get back to work! ;)</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :username, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, item_wrapper_class: 'inline', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Login' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
  <div class="span4 hidden-phone">
    <div class="module emphasized-3">
      <h3>Welcome back!</h3>
      <p>Whether you're here to see what to fix next, or to report something <strong>brand new</strong>, you're doing great work for your community, and we thank you.</p>
  </div>
</div>
