<h1>Projects</h1>

<% if @projects.blank? %>
<p>No open projects at this time.</p>
<% else %>
  <table border="0" cellspacing="0" cellpadding="0" width="100%" class="table table-striped table-bordered">
    <thead>
      <th>Project Name</th>
      <th>Project Description</th>
      <th>Rating<a href="#" class="help" title="<%= meaning_of_rating 0 %>">?</a></th>
    <tbody>
      <tr>
        <%= render @projects %>
      </tr>
    </tbody>
  </table>
<% end %>

<p><%= link_to 'Create a new project', new_project_path %></p>

<%= paginate @projects %>
